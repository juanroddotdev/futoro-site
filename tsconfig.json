{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    "composite": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Development mode - controlled by NODE_ENV */
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/_unused/**",
    "project-backup-*/**",
    "pre-restoration-backup-*/**",
    "dist",
    "dist-ssr"
  ]
}
